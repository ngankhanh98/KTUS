<!--Search function-->
<script>
  function search(){
    $.ajax({
        url: '/seach/title',
        type: 'get',
        cache: false,
        data: { title:document.getElementById("searchtitle").value},
        success: function (e) 
        {
            if (e.status === -1) {
                
              alert(e.message);
              
            }
            else {
                  if(e.status===0)
                    alert(e.message)
                  else
                    {
                      alert(e.data);
                    }
            }
        }
    });
  }
</script>
