    <!-- Include Editor JS files. -->
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/froala-editor@2.9.0/js/froala_editor.pkgd.min.js"
    ></script>

    <!-- Initialize the editor. -->
    
    <script>
      $(function() 
      {
        
        
        $('div#froala-editor').froalaEditor(
          {
            imageUploadURL: '/image_upload',
           
          toolbarButtons: [
            'bold',
            'italic',
            'underline',
            'paragraphFormat',
            'fontSize',
            'color',
            '|',
            'align',
            'outdent',
            'indent',
            'insertLink',
            'quote',
            'insertHR',
            '|',
            'clearFormatting',
            'html',
          ],
          tableResizingLimit: 0,
          placeholderText: 'Nội dung...',
          
        });
      });

      

      function post() {
        
        if(document.getElementById("header").value.length<1||$('div#froala-editor').froalaEditor('html.get').length<1)
        {
          alert('Vui lòng nhập đủ nội dung (tiêu đề, nội dung)');
        }
        else{
          $.ajax({
        url: '/new-post',
        type: 'POST',
        cache: false,
        data: { content: $('div#froala-editor').froalaEditor('html.get'),title:document.getElementById("header").value},
        success: function (e) 
        {
            if (e.status === -1) {
                
              alert(e.message);
                location.reload(false); 
                
              
            }
            else {
              location.href =('/post/'+e.message);
            }
        }
    });
  }  
      }
    </script>
    <script>
      $(function() {
        // Catch the image being removed.
        $('div#froala-editor').on('froalaEditor.image.removed', function (e, editor, $img) {
          $.ajax({
            // Request method.
            method: 'POST',
     
            // Request URL.
            url: '/delete_image',
     
            // Request params.
            data: {
              src: $img.attr('src')
            }
          })
          .done (function (data) {
            console.log ('Image was deleted');
          })
          .fail (function (err) {
            console.log ('Image delete problem: ' + JSON.stringify(err));
          })
        });
      });
    </script>
