<!--Search function-->
<script>
    function search()
    {
      let data=document.getElementById("searchtitle").value;
      $.ajax({
          url: '/search',
          type: 'post',
          cache: false,
          data: { title: data},
          success: function (e) 
          {
              if (e.status === -1) {
                  
                alert(e.message);
                
              }
              else {
                    if(e.status===0)
                      alert(e.message)
                    else
                      {
                        
                        location.protocol='get';
                        location.href="/search/"+data;
                      }
              }
          }
      });
    };
    
